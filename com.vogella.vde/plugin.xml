<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         id="vdeProduct"
         name="Voclipse"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.eclipse.ui.ide.workbench"
            name="Voclipse">
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
         <property
               name="appName"
               value="Voclipse">
         </property>
         <property
               name="aboutImage"
               value="icons/vogella.png">
         </property>
         <property
               name="startupForegroundColor"
               value="C8D5EA">
         </property>
         <property
               name="startupMessageRect"
               value="7,220,441,20">
         </property>
         <property
               name="startupProgressRect"
               value="0,280,455,15">
         </property>
         <property
               name="aboutText"
               value="voclipse is a product of the vogella GmbH. It is based on the Eclipse SDK and adds a few more customization layers on top of it. See http://www.voclipse.com . product includes software developed by the&#x0A;Apache Software Foundation http://apache.org/">
         </property>
         <!--
         <property
               name="windowImages"
               value="eclipse.png,eclipse32.png,eclipse48.png">
         </property>
         -->
         <property
          		name="introBrandingImage"
          		value="product:splash.png"/>
         <property
               name="introTitle"
               value="Welcome to the Voclipse">
         </property>
         <property
               name="introBrandingImageText"
               value="Voclipse Project">
         </property>
         <property
				name="cssTheme"
				value="org.eclipse.e4.ui.css.theme.e4_default">
		  </property>
         <!--
         <property 
               name="cssTheme"
               value="com.vogella.voclipse.theme.theme1">
         </property>
         -->
         <property
               name="applicationCSSResources" 
               value="platform:/plugin/org.eclipse.platform/images/"> 
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.intro">
      <introProductBinding
            introId="org.eclipse.ui.intro.universal"
            productId="com.vogella.vde.vdeProduct">
      </introProductBinding>
   </extension>
   <extension point="org.eclipse.ui.intro.configExtension">
 	<configExtension
		configId="org.eclipse.ui.intro.universalConfig"
		content="intro/vogella-webresources.xml" />
	</extension>

   
</plugin>
